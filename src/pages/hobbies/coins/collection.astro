const parseStartYear = (date: string) => {
  const matches = [...date.matchAll(/\d{2,4}/g)].map((m) => Number(m[0]));
  if (matches.length === 0) return 0;
  const first = matches[0];
  return /BC/i.test(date) ? -first : first;
};

const categoryFor = (coin: (typeof coins)[number]) => {
  if (/ARMENIA|Levon/i.test(coin.title)) return "Medieval";
  const year = parseStartYear(coin.date);
  if (year >= 1) return "Roman Imperial";
  if (year <= -500) return "Archaic Greek";
  if (year < 0) return "Classical & Hellenistic Greek";
  return "Other";
};

const categories = [
  "Archaic Greek",
  "Classical & Hellenistic Greek",
  "Roman Imperial",
  "Medieval",
] as const;

const groupedCoins = categories
  .map((category) => ({
    category,
    items: coins
      .filter((coin) => categoryFor(coin) === category)
      .sort((a, b) => parseStartYear(a.date) - parseStartYear(b.date)),
  }))
  .filter((group) => group.items.length > 0);
